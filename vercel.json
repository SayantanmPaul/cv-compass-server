{
    "version": 2,
    "builds": [
        {
            "src": "app.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "lib/**/*",
                    "node_modules/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.ts"
        },
        {
            "src": "/api/upload",
            "dest": "/app.ts",
            "methods": [
                "POST"
            ]
        }
    ]
}